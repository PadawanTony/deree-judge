{% extends "master.twig" %}

{% block content %}

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Review Reported Comments</h3>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Select Comments to Delete</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            {% if success == 0 %}
                                <h3 style="color: forestgreen">{{ message }}</h3>
                            {% else %}
                                <h3 style="color: tomato">{{ message }}</h3>
                            {% endif %}

                            <form action="/admin/postReviewComments" method="post">
                                <table id="datatable"
                                       class="table table-striped table-bordered responsive-utilities jambo_table">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Comment</th>
                                        <th># Reported</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for comment in comments %}
                                        <tr>
                                            <td><input type="checkbox" name="comments[]" value="{{ comment.judgmentID }}"/></td>
                                            <td> {{ comment.comment }}</td>
                                            <td> {{ comment.reported }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                                <div class="form-group-lg" style="margin: 10px auto;">
                                    <button style="margin: 30px;" name="delete" type="submit"
                                            class="btn btn-danger">
                                        Delete Selected Comments
                                    </button>
                                    <button style="margin: 30px auto;" name="keep" type="submit"
                                            class="btn btn-success">
                                        Keep Selected Comments
                                    </button>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock content %}