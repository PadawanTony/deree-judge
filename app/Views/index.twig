{% extends 'master.twig' %}

{% block content %}

    <div class="w3-container" style="margin-top: 80px;">
        <div class="w3-row-padding">

            {% if errorMessage is not null %}
                {% if success == true %}
                    <div class="w3-container w3-section w3-pale-green w3-leftbar w3-border-green w3-text-theme-d1"
                         style="text-align: center; max-width: 600px; margin: auto;">
                        <h3>{{ errorMessage }}</h3>
                    </div>
                {% else %}
                    <div class="w3-container w3-section w3-pale-red w3-leftbar w3-border-red w3-text-theme-d1"
                         style="text-align: center; max-width: 600px; margin: auto;">
                        <h3>{{ errorMessage }}</h3>
                    </div>
                {% endif %}
            {% endif %}

            <div class="w3-col s12 m4">
                <div class="w3-card-4 w3-margin w3-round index-card">
                    <a href="/selectProfessorToView">
                        <img src="/img/headshot3.jpg" style="width:100%">
                        <div class="w3-container w3-center">
                            <p>View Evaluations!</p>
                        </div>
                    </a>
                </div>
            </div>

            <div class="w3-col s12 m4">
                <div class="w3-card-4 w3-margin w3-round index-card">
                    <a href="/selectProfessor">
                        <img src="/img/headshot3.jpg" style="width:100%">
                        <div class="w3-container w3-center">
                            <p>Judge a Professor!</p>
                        </div>
                    </a>
                </div>
            </div>

            <div class="w3-col s12 m4" style="opacity: 0.5;">
                <div class="w3-card-4 w3-margin w3-round index-card">
                    <a href="#">
                        <img src="/img/headshot3.jpg" style="width:100%">
                        <div class="w3-container w3-center">
                            <p><b>COMING SOON</b> - Add a Professor!</p>
                        </div>
                    </a>
                </div>
            </div>

        </div>
    </div>

{% endblock content %}

{% block scripts %}


        $(document).ready(function () {
            $(".index-card").on("mouseover", function () {
                $(this).css({
                    "background-color": "teal",
                    "transition": "background-color 0.5s",
                    " -webkit-transition": "background-color 0.5s"
                });
            });

            $(".index-card").on("mouseout", function () {
                $(this).css({
                    "background-color": "white",
                    "transition": "background-color 0.5s",
                    " -webkit-transition": "background-color 0.5s"
                });
            });
        });


{% endblock scripts %}